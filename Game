cout << " " << endl;
cout << "'" << name << "', my mom said to me — the last of a thousand times — before I got on the plane. 'You don't have to do this.'" << endl;
cout << " " << endl;

int a;
int s;
cout << "Do you want to go?" << endl;
cout << "1. Yes, I do" << endl;
cout << "2. No, I don't" << endl;

cin >> a;
switch (a)
{
    case 1:
    {
        cout << "'I want to go, trust me. I wouldn't lie...' I responded. While I was hesitant, I truely did want to go." << endl;
        
    }

    case 2:
    {
        cout << "'I want to go,' I lied. I'd always been a bad liar, but I'd been saying this lie so frequently lately that it sounded almost convincing now." << endl;
        
    }
    default:
    cout << "Please enter 1 or 2." << endl;
}
